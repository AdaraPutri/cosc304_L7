<h1>Adminstrator View</h1>


    <h2>Total Order Amount by Date</h2>
        <table border='1'<tr><th>Order Date</th><th>Total Order Amount</th></tr>
                {{#each order}}
                    <tr>
                    <td>{{this.fullDate}} </td>
                    <td>{{this.totalSales}}</td>
                    </tr>
                {{/each}}

        </table>

    <h2>Add New Product</h2>
            <div>
            <form method="post" action="/addprod">
                <label>Product Name: </label>
                <input type="text" name="productName" placeholder="Enter Name"><br>
                <label>Product Price: $</label>
                <input type="number" name="productPrice" placeholder="Enter Price" min="0" value="0" step="any"><br>
                <label>Product Desc: </label>
                <input type="text" name="productDesc" placeholder="Enter Description"><br> 
                <label>Category Id: </label>
                <input type="number" name="productCategory"><br>
                <input type="submit" />
            </form>
            </div>
    {{#if successMessage}}
        <p style="color: green; font-weight: bold;">{{successMessage}}</p>
    {{/if}}

    {{#if errorMessage}}
        <p style="color: red; font-weight: bold;">{{errorMessage}}</p>
    {{/if}}

    <h2>Update Product</h2>
        <div>
            <form method="post" action="/updateprod">
                <label >ProductId:</label>
                <input type="number" name="productId" placeholder="Enter Product ID"><br>
                <label>New Product Name: </label>
                <input type="text" name="productName" placeholder="Enter updated name"><br>
                <label>New Product Price: $</label>
                <input type="number" name="productPrice" placeholder="Enter updated price" min="0" value="0" step="any"><br>
                <label>New Product Desc: </label>
                <input type="text" name="productDesc" placeholder="Enter updated description"><br> 
                <input type="submit" />
            </form>
            </div>
    {{#if updateSuccessMessage}}
        <p style="color: green; font-weight: bold;">{{updateSuccessMessage}}</p>
    {{/if}}

    {{#if updateErrorMessage}}
        <p style="color: red; font-weight: bold;">{{updateErrorMessage}}</p>
    {{/if}}

    <h2>Delete Product</h2>
        <div>
            <form method="post" action="/deleteprod">
                <label >ProductId: </label>
                <input type="number" name="productId" placeholder="Enter Product ID"><br>
                <input type="submit" />
            </form>
        </div>
    {{#if deleteSuccessMessage}}
        <p style="color: green; font-weight: bold;">{{deleteSuccessMessage}}</p>
    {{/if}}

    {{#if deleteErrorMessage}}
        <p style="color: red; font-weight: bold;">{{deleteErrorMessage}}</p>
    {{/if}}

