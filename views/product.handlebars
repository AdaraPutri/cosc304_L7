<a href="http://localhost" class="back-link">&lt;&lt; Back to Home</a>
<h1>{{productName}}</h1>

    <img src="{{localImageLink}}">

    <img src="{{displayImageLink}}">

    <h3>{{productDesc}}</h3>

    <h2><a href="{{addToCartLink}}">Add to Cart</a></h2>

    <h2><a href="{{continueShoppingLink}}">Continue Shopping</a></h2>

    <h2>Write a Review</h2>
    <div>
        <form method="post" action="/review" >
            <input type="hidden" name="productId" value="{{productId}}">
            <label for="customerId">CustomerId: </label>
            <input type="numeric" name="customerId">
            <label for="rating">Rating: </label>
            <input type="number" name="reviewRating" min="0" max="5" step="1">
            <label for="review">Review: </label>
            <input type="text" name="reviewComment">
            <input type="submit">
        </form>
    </div>
  

    <h3>{{existingReviewMessage}}</h3>
    <h3>{{successfulReviewMessage}}</h3>
    

    <h2>Product Reviews</h2>
        {{#each review}}
        <div>
            <div>{{this.fullDate}}</div>
            <div>{{this.fullRating}}</div> 
            <div>{{this.reviewComment}}</div>
            <div>{{this.customerName}}</div>
            <div>------------------------------------------------</div>
        </div>
        {{/each}}

    <h3>{{noReviewMessage}}</h3>
